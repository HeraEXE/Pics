<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/imageList">

    <fragment
        android:id="@+id/imageList"
        android:name="com.hera.pics.ui.fragments.ImageList"
        android:label="fragment_image_list"
        tools:layout="@layout/fragment_image_list" >
        <action
            android:id="@+id/action_imageList_to_image"
            app:destination="@id/image" />
    </fragment>
    <fragment
        android:id="@+id/image"
        android:name="com.hera.pics.ui.fragments.Image"
        android:label="fragment_image"
        tools:layout="@layout/fragment_image" />
</navigation>